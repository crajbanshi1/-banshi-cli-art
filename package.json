{
  "name": "@banshi/cli-art",
  "version": "0.0.4",
  "description": "Text formating tool for command prompt",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "test": "npm run bundle && tsc -p tsconfig.test.json && jest --detectOpenHandles __test__",
    "coverage": "jest --collect-coverage",
    "prebuild": "npx rimraf dist",
    "build": "tsc",
    "browser": "npx rimraf build && tsc -p tsconfig.browser.json",
    "start": "node dist/index.js",
    "bundle": "npx rimraf dist && tsc",
    "clean:outdir": "npx rimraf __test__ dist",
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint src/*.ts --fix",
    "xreinstall": "npx npm-force-resolutions",
    "prepublish": "npm run build"
  },
  "author": "Chanchal Rajbanshi <crajbanshi@gmail.com> (https://github.com/crajbanshi1)",
  "license": "MIT",
  "homepage": "https://github.com/crajbanshi1/-banshi-cli-art#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crajbanshi1/-banshi-cli-art.git"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__test__/"
    ]
  },
  "bin": {
    "cli-art": "dist/bin/index.js"
  },
  "directories": {
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "readline": "^1.3.0"
  },
  "bugs": {
    "url": "https://github.com/crajbanshi1/-banshi-cli-art/issues"
  },
  "keywords": [
    "cli",
    "colors",
    "text",
    "color",
    "cli",
    "color",
    "matrix",
    "text",
    "art",
    "word",
    "art"
  ]
}